<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cyan_col"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jsp.lh.ProfileActivity$PlaceholderFragment" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="97dp" >
    </RelativeLayout>

    <EditText
        android:id="@+id/ageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lname"
        android:layout_below="@+id/lname"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/enter_age"
        android:inputType="number" />

    <EditText
        android:id="@+id/lname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fname"
        android:layout_below="@+id/fname"
        android:ems="10"
        android:hint="@string/enter_last"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/fname"
        android:layout_alignBottom="@+id/fname"
        android:layout_alignLeft="@+id/relativeLayout1"
        android:text="First Name:" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lname"
        android:layout_alignBottom="@+id/lname"
        android:layout_alignLeft="@+id/textView1"
        android:text="Last Name:" />

    <EditText
        android:id="@+id/fname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/textView1"
        android:ems="10"
        android:hint="@string/first"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/feetText"
        android:layout_below="@+id/weightText"
        android:layout_marginRight="21dp"
        android:layout_marginTop="72dp"
        android:onClick="gotoHomeScreen"
        android:text="Submit" />

    <EditText
        android:id="@+id/inchText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ageText"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/ageText"
        android:ems="10"
        android:hint="@string/inches"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/feetText"
        android:layout_alignBottom="@+id/feetText"
        android:layout_alignLeft="@+id/textView3"
        android:text="Height" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/weightText"
        android:layout_alignBottom="@+id/weightText"
        android:layout_alignLeft="@+id/textView4"
        android:text="Weight" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ageText"
        android:layout_alignBottom="@+id/ageText"
        android:layout_toRightOf="@+id/relativeLayout1"
        android:text="Age:" />

    <EditText
        android:id="@+id/feetText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ageText"
        android:layout_below="@+id/ageText"
        android:ems="10"
        android:hint="@string/feet"
        android:inputType="number" />

    <EditText
        android:id="@+id/weightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/feetText"
        android:layout_below="@+id/feetText"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="@string/kgs"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/inchText"
        android:layout_alignRight="@+id/inchText"
        android:layout_alignTop="@+id/textView1"
        android:layout_marginLeft="98dp"
        android:src="@drawable/cell_shape" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/inchText"
        android:layout_below="@+id/textView2"
        android:text="Button"
        android:onClick="startCam" />

</RelativeLayout>